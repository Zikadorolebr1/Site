    <script>
        function criarBolhas(container) {
            const bolha = document.createElement('div')
            bolha.classList.add('bubble');
            bolha.style.left = Math.random() * 90 + '%';
            bolha.style.width = 10 + Math.random() * 10 + 'px'
            bolha.style.height = bolha.style.width;
            bolha.style.animationDelay = Math.random() * 2 + 's'
            container.appendChild(bolha);

            setTimeout(() => {
                bolha.remove();
            }, 6000);
        }

        const frenteBolhas = document.querySelector('.flip-card-front, bubble-background');
        const trasBolhas = document.querySelector('.flip-card-back, bubble-background');

        setInterval(() => {
            criarBolhas(frenteBolhas);
            criarBolhas(trasBolhas);
        }, 800);
    </script> 
